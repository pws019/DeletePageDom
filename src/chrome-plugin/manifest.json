
{
  "manifest_version": 2,

  "name": "ClearPage",
  "description": "这个插件主要用来清除页面局部区域.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "http://*/*",
		"https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "打清理助手"
    }
  },
  "content_scripts":[{
    "matches":["*://www.baidu.com/"],
    "js":["content.js"],
    "run_at":"document_end",
    "all_frames":true

  }]

}